<%- include('partials/header') %>


    <body style="margin-top: 10vh;">
        
        <%- include('partials/navbar') %>

            <div class="container">
                <h1>Perguntas</h1>
                <hr>

                <%if(perguntas == 0){ %>
                    
                        
                        <h2>Nenhuma pergunta foi realizada</h2></a>
                <% } %>

                <% perguntas.forEach(pergunta => { %>


                    <br>
                    <div class="card">
                        <div class="card-body">
                            
                            <a href='pergunta/<%=pergunta.id%>' target="_blank">

                                <h3>
                                    <%=pergunta.title%>
                                </h3>
                            </a>


                        </div>
                        <div class="card-footer">
                            <p>
                                <%=pergunta.description%>
                            </p>

                            <a class="btn btn-dark" href='pergunta/<%=pergunta.id%>'>Responder</a>

                        </div>
                    </div>

                    <% }) %>


                    


            </div>
            <br>
    </body>

    <%- include('partials/footer') %>